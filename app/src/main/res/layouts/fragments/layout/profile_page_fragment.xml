<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ProfilePage.ProfilePageFragment"
    android:background="#A27250"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/display_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_border_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_profile_page"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_edit_profile_image"
        app:layout_constraintBottom_toBottomOf="@+id/display_profile_image"
        app:layout_constraintEnd_toEndOf="@+id/display_profile_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/display_profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="Change username?"
        android:textColor="#D5B7A1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_profile_image" />

    <EditText
        android:id="@+id/edit_username_edittext"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:hint="Type new password"
        android:textSize="14dp"
        android:background="@drawable/text_input_border"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Change password?"
        android:textColor="#D5B7A1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/edit_username_edittext"
        app:layout_constraintTop_toBottomOf="@+id/edit_username_edittext" />


    <EditText
        android:id="@+id/type_old_password_edittext"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:background="@drawable/text_input_border"
        android:layout_marginTop="5dp"
        android:hint="Type old password"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/type_new_password_edittext"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_input_border"
        android:hint="Type new password"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/type_old_password_edittext"
        app:layout_constraintTop_toBottomOf="@+id/type_old_password_edittext" />

    <EditText
        android:id="@+id/reType_new_password_edittext"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_input_border"
        android:hint="Retype new password"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/type_new_password_edittext"
        app:layout_constraintTop_toBottomOf="@+id/type_new_password_edittext" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_change_information_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_tick_yes"
        app:backgroundTint="#6F373C"
        app:backgroundTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/enter_coffee_description" />


</androidx.constraintlayout.widget.ConstraintLayout>